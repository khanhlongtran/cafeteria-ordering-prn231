@page
@model CafeteriaOrderingFrontend.Pages.RegisterModel
@{
    ViewData["Title"] = "Register";
}

<div class="container">
    <div class="row justify-content-center align-items-center">
        <div class="col-md-6 col-lg-4">
            <div class="card shadow-lg">
                <div class="card-body p-5">
                    <div class="text-center mb-4">
                        <h2 class="fw-bold">Create Account</h2>
                        <p class="text-muted">Please fill in the details to register</p>
                    </div>

                    @if (!string.IsNullOrEmpty(Model.ErrorMessage))
                    {
                        <div class="alert alert-danger alert-dismissible fade show" role="alert">
                            @Model.ErrorMessage
                            <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
                        </div>
                    }

                    @if (!string.IsNullOrEmpty(Model.SuccessMessage))
                    {
                        <div class="alert alert-success alert-dismissible fade show" role="alert">
                            @Model.SuccessMessage
                            <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
                        </div>
                    }

                    <form method="post">
                        <div class="mb-3">
                            <label asp-for="RegisterRequest.FullName" class="form-label">Full Name</label>
                            <input asp-for="RegisterRequest.FullName" class="form-control" type="text" required>
                            <span asp-validation-for="RegisterRequest.FullName" class="text-danger"></span>
                        </div>

                        <div class="mb-3">
                            <label asp-for="RegisterRequest.Email" class="form-label">Email</label>
                            <input asp-for="RegisterRequest.Email" class="form-control" type="email" required>
                            <span asp-validation-for="RegisterRequest.Email" class="text-danger"></span>
                        </div>

                        <div class="mb-3">
                            <label asp-for="RegisterRequest.Password" class="form-label">Password</label>
                            <input asp-for="RegisterRequest.Password" class="form-control" type="password" required>
                            <span asp-validation-for="RegisterRequest.Password" class="text-danger"></span>
                        </div>

                        <div class="mb-3">
                            <label asp-for="RegisterRequest.Phone" class="form-label">Phone</label>
                            <input asp-for="RegisterRequest.Phone" class="form-control" type="text" required>
                            <span asp-validation-for="RegisterRequest.Phone" class="text-danger"></span>
                        </div>

                        <div class="mb-3">
                            <label asp-for="RegisterRequest.Role" class="form-label">Role</label>
                            <select asp-for="RegisterRequest.Role" class="form-select" required>
                                <option value="Manager">Manager</option>
                                <option value="Deliver">Deliver</option>
                            </select>
                            <span asp-validation-for="RegisterRequest.Role" class="text-danger"></span>
                        </div>

                        <div class="d-grid">
                            <button type="submit" class="btn btn-primary btn-lg">Register</button>
                        </div>
                    </form>

                    <div class="text-center mt-4">
                        <p class="mb-0">Already have an account? <a href="/Login" class="text-primary">Sign in</a></p>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

@section Styles {
    <style>
        body {
            background: linear-gradient(135deg, #f5f7fa 0%, #c3cfe2 100%);
        }

        .card {
            border: none;
            border-radius: 15px;
        }

        .form-control {
            border-radius: 8px;
            padding: 0.75rem 1rem;
        }

        .form-control:focus {
            box-shadow: 0 0 0 0.2rem rgba(13, 110, 253, 0.15);
        }

        .btn-primary {
            border-radius: 8px;
            padding: 0.75rem;
            font-weight: 500;
        }

        .alert {
            border-radius: 8px;
        }
    </style>
}